<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="bankAccountRepository"
		class="com.Springboot.BankAccountRepositoryImpl" />

	<bean id="bankAccountService"
		class="com.Springboot.BankAccountServiceImpl">
		<constructor-arg ref="bankAccountRepository" />
	</bean>

	<bean id="bankAccountController"
		class="com.Springboot.BankAccountController">
		<property name="bankAccountService" ref="bankAccountService" />
	</bean>

</beans>
